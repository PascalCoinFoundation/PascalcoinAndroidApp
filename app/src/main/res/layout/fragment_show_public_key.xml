<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <ImageView
                android:id="@+id/imageReceiveQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                app:srcCompat="@android:drawable/editbox_dropdown_dark_frame" />

            <TextView
                android:id="@+id/strTxtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageReceiveQR"
                android:layout_marginTop="10dp"
                android:text="@string/txtPublicKey"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/strTxtReceiveAddressValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/strTxtAddress"
                android:layout_marginTop="24dp"
                android:text="0xe4563df757433434343434343434"
                android:textSize="18sp"
                android:textStyle="italic" />
            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/strTxtReceiveAddressValue"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:text="@string/button_close" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
