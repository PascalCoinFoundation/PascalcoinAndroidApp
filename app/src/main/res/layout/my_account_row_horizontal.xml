<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="3dp"
    card_view:cardCornerRadius="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="110dp"
                android:orientation="vertical"
                android:id="@+id/account_info"
                android:layout_height="wrap_content">
        <TextView
            android:gravity="start"
            android:id="@+id/row_account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="TextView1" />
        <TextView
            android:id="@+id/row_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_account_id"
            android:layout_marginBottom="5dp"
            android:text="TextView2" />
        <TextView
            android:id="@+id/row_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_account_name"
            android:text="TextView3" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/send_pasc_layout"
                android:orientation="vertical"
                android:layout_toEndOf="@id/account_info">
            <ImageButton
                android:id="@+id/imageButtonSendPasc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_send_black_24dp" />
            <TextView
                android:id="@+id/txt_send_pasc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="@string/txt_send" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:id="@+id/operations_layout"
                android:layout_toEndOf="@id/send_pasc_layout"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/imageButtonOperations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_reorder_black_24dp" />
            <TextView
                android:id="@+id/txt_sell_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="12dp"
                android:text="@string/ops_account" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/operations_layout"
                android:orientation="vertical"
                android:id="@+id/transfer_account_layout"
                android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/imageButtonSendAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_forward_black_24dp" />
            <TextView
                android:id="@+id/txt_send_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="12dp"
                android:text="@string/txt_transfer_account" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/transfer_account_layout"
                android:orientation="vertical"
                android:id="@+id/edit_account_layout"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/imageButtonChangeAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/c" />
                <TextView
                    android:id="@+id/txt_change_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="12dp"
                    android:text="@string/txt_change_account_short" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/edit_account_layout"
                android:orientation="vertical"
                android:id="@+id/list_account_layout"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/imageButtonListAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_monetization_on_black_24dp" />
                <TextView
                    android:id="@+id/txt_list_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="12dp"
                    android:text="@string/sell_account" />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/edit_account_layout"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/delist_account_layout"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/imageButtonDeListAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_money_off_black_24dp" />
                <TextView
                    android:id="@+id/txt_delist_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="12dp"
                    android:text="@string/delist_account" />
            </android.support.v7.widget.LinearLayoutCompat>

        </RelativeLayout>
    </android.support.v7.widget.CardView>