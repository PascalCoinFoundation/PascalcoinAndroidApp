<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="match_parent">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorControlHighlight"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingStart="1dp"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:paddingEnd="16dp">
            <ImageView
                android:id="@+id/search_bar_hint_icon_1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/search_hint"
                android:src="@android:drawable/ic_menu_search"/>

            <EditText
                android:id="@+id/search_bar_edit_text_name"
                android:layout_width="0dp"
                android:hint="@string/search_hint_name"
                android:paddingLeft="10dip"
                android:maxLength="25"
                android:textColorHint="@color/cardview_light_background"
                android:textColor="@color/cardview_light_background"
                android:background="@drawable/rounded_edittext"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789!@#$%*()-+{}[]_:|,.?/~"
                android:layout_weight="12"
                android:layout_height="wrap_content" />
            <Switch
                android:id="@+id/switch_exact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Exact" />
        </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/colorPrimary"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingStart="1dp"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:id="@+id/search_bar_hint_icon_2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/search_hint"
                    android:src="@android:drawable/ic_menu_search"/>

                <EditText
                    android:id="@+id/search_bar_edit_text_number"
                    android:layout_width="0dp"
                    android:hint="@string/search_hint_number"
                    android:paddingLeft="10dip"
                    android:maxLength="25"
                    android:textColorHint="@color/cardview_light_background"
                    android:textColor="@color/cardview_light_background"
                    android:background="@drawable/rounded_edittext"
                    android:inputType="number"
                    android:layout_weight="12"
                    android:layout_height="wrap_content" />
                <Switch
                    android:id="@+id/switch_exact_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="Exact" />
            </LinearLayout>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/colorControlHighlight"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingStart="1dp"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:id="@+id/search_bar_hint_icon_3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/search_hint"
                    android:src="@android:drawable/ic_menu_search"/>

                <Switch
                    android:id="@+id/switchOnlyForSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/txt_show_only_accounts_for_sale" />


            </LinearLayout>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/colorPrimary"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingStart="1dp"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:id="@+id/search_bar_hint_icon_4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/search_hint"
                    android:src="@android:drawable/ic_menu_search"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_balance_range"/>
                <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
                    android:id="@+id/rangeSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/colorControlHighlight"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingStart="1dp"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:paddingEnd="16dp">
                <ImageView
                    android:id="@+id/search_bar_hint_icon_5"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/search_hint"
                    android:src="@android:drawable/ic_menu_search"/>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Switch
                    android:id="@+id/switchShowFromKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/txt_filter_accounts_by_one_of_my_keys" />
                    <Spinner
                        android:id="@+id/listUserKeys"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/btn_dropdown"
                        android:hint="@string/txt_select_key"
                        android:spinnerMode="dropdown"/>
            </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/colorPrimary"
            android:layout_alignParentStart="true">
            <android.widget.Button android:layout_height="wrap_content"
                android:id="@+id/buttonAdvancedSearch"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/txt_search">

            </android.widget.Button>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>

</ScrollView>